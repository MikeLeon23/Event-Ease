<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA">

    <androidx.cardview.widget.CardView
        android:id="@+id/event_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="Back" />

            <!-- Star Icon -->
            <ImageView
                android:id="@+id/star_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:contentDescription="Favorite" />

            <!-- Event Image -->
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/back_arrow"
                android:layout_marginTop="16dp"
                android:background="#D3D3D3"
                android:contentDescription="Event Image" />

            <!-- Event Title -->
            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_image"
                android:layout_marginTop="16dp"
                android:text="GIGI COMEDY SHOW: DISCO (EARLY SHOW)"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Event Location -->
            <TextView
                android:id="@+id/event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_title"
                android:layout_marginTop="8dp"
                android:text="China Cloud Studios, Vancouver, BC"
                android:textColor="#808080"
                android:textSize="16sp" />

            <!-- Event Date -->
            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_location"
                android:layout_marginTop="4dp"
                android:text="Feb 5 at 9 PM"
                android:textColor="#808080"
                android:textSize="16sp" />

            <!-- Overview Label -->
            <TextView
                android:id="@+id/overview_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_date"
                android:layout_marginTop="16dp"
                android:text="OVERVIEW"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Event Description -->
            <TextView
                android:id="@+id/event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/overview_label"
                android:layout_marginTop="8dp"
                android:text="‘Laugh Track’ is a high-energy, fast-paced comedy show that blends stand-up, improv..."
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Register Button -->

            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:text="Register"
                android:textSize="24sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>